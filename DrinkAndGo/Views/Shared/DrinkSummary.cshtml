@model Drink

    <div class="col-md-4 col-lg-4 col-sm-4">
        <div class="thumbnail">
            <img width="300" height="270" src="@Model.ImageThumbnailUrl" alt="@Model.Name" />
            <div class="caption">
                <h3 class="pull-right">
                    @Model.Price.ToString("c")
                </h3>
                <h3><a>@Model.Name</a></h3>
                <p>@Model.ShortDescription</p>
            </div>
            <div class="addToCart text-right">
                <p class="button ">
                    <a class="btn btn-success" id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-drinkId="@Model.DrinkId">
                        Add to cart
                    </a>
                </p>
            </div>
        </div>
    </div>